ng-include(src="'/partials/common/finance_header.html'")
.line_item_show.container
  .panel.panel-default
    .panel-heading
      h4.panel-title {{item.event_date | localDate}} - {{item.type | typeString}}
    .panel-body    
      .row
        .col-xs-6.price
          {{item.amount | currency}}
        .col-xs-6.well
          div Account: {{account.name}}
          div Category: {{item.category_name}}
          div Payee: {{item.payee_name}}
          div(ng-show='item.comment.length > 0') Comment: {{item.comment}}
          div(ng-show='item.grouped_label.length > 0') Highlight Group: {{item.grouped_label}}
          div(ng-show='item.tags.length > 0') Tags: {{item.tags}}
          hr/
          div Balance: {{item.balance | currency}}

      .row.form_area
        .col-xs-3.col-xs-offset-3
          a.btn.btn-primary.form-control(ng-href='/line_items/{{item.id}}/edit') Edit
        .col-xs-3
          a.btn.btn-primary.form-control(ng-href='/line_items/{{item.id}}') Delete