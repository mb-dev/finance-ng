nav.navbar-default(role='navigation')
  .navbar-header
    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
      span.sr-only Toggle navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar
    a.navbar-brand(href='/') Finance
  .collapse.navbar-collapse
    ul.nav.navbar-nav
      li(ng-class="{active: isActive('accounts')}")
        a(href='/accounts') Accounts
      li(ng-class="{active: isActive('line_items')}")
        a(href='/line_items') Line Items
      li(ng-class="{active: isActive('budgets')}")
        a(href='/budgets') Budgets
      li(ng-class="{active: isActive('reports')}")
        a(href='/reports') Reports
      li(ng-class="{active: isActive('other')}")
        a(href='/misc') More Actions

div.alert.alert-success(ng-if="successMsg && successMsg.length > 0")
  span.fa-stack.fa-lg
    i.fa.fa-circle.fa-stack-2x
    i.fa.fa-check.fa-stack-1x.fa-inverse
  |&nbsp;
  span {{$root.successMsg}}
