ng-include(src="'/partials/common/memory_header.html'")
.events_index.container.index_page
  .new.row
    a.btn.btn-primary.col-xs-12.add_transaction(ng-href='/events/new') Add Event

  .month-nav.row.well.wells-sm
    a.col-xs-3.prev_month(ng-click='prevMonth()', href='#') &lt;&lt; Prev
    span.col-xs-6.current_month {{currentDate | amDateFormat:'MMMM, YYYY'}}
    a.col-xs-3.next_month(ng-click='nextMonth()', href='#') Next &gt;&gt;

  .main_list.list-group
    .list-group-item.fixed-row.header.compact
      .date.col-90 Date
      .payee.rest-90 Title
    a.list-group-item.fixed-row(ng-href='/events/{{item.id}}', ng-repeat='item in items')
      .icons.col-90
        i.fa.fa-calendar.fa-sr
        span {{item.date | monthDay }}
      .payee.rest-90 {{item.title}}