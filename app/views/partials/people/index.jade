ng-include(src="'/partials/common/memory_header.html'")
.people_index.container.index_page
  .new.row
    a.btn.btn-primary.col-xs-12.add_transaction(ng-href='/people/new') Add Person

  div(ng-repeat='categoryName in categories')
    h3 {{categoryName}}
    .main_list.list-group   
      .list-group-item.fixed-row.header.compact
        .icons.col-90 &nbsp;
        .date.rest-90 Name
      a.list-group-item.fixed-row(ng-href='/people/{{item.id}}', ng-repeat='item in items[categoryName]')
        .icons.col-90 
          i.fa.fa-user
          |&nbsp;
        .date.rest-90 {{item.name }}