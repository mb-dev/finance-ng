ng-include(src="'/partials/common/memory_header.html'")
.people_show.container.show_page
  .panel.panel-default.row
    .panel-heading
      .btns-parent.pull-right
        a.btn.btn-default.btn-sm.edit(ng-href='/people/{{item.id}}/edit') Edit  
        a.btn.btn-default.btn-sm.delete(ng-href='/people/{{item.id}}/delete') Delete
      h4.panel-title Person Details
    .panel-body.as-prop-columns.col-xs-12
      .row
        .left-pane Name
        .right-pane {{item.name}}
      .row
        .left-pane Categories
        .right-pane {{item.categories | joinBy}}
      .row
        .left-pane Interests
        .right-pane {{item.interests | joinBy}}
      .row
        .left-pane Workplace
        .right-pane {{item.workplace}}
      .row
        .left-pane Birth date
        .right-pane {{item.birthDate | localDate}}
      .row
        .col-xs-12(ng-bind-html="item.comments | newline")

  a.btn.btn-primary.pull-right(ng-href='/memories/new?personId={{item.id}}&returnto={{currentLocation}}') Add
  h3 Associated Memories:
  .list-group
    a.list-group-item.fixed-row.row(ng-repeat='item in memories', ng-href="/memories/{{item.id}}")
      span(ng-include="'/partials/memories/itemSmall.html'")

  a.btn.btn-primary.pull-right(ng-href='/memories/addMention?personId={{item.id}}') Add
  h3 Mentioned memories
  .list-group
    a.list-group-item.fixed-row(ng-repeat='item in mentionedMemories', ng-href="/memories/{{item.id}}")
      span(ng-include="'/partials/memories/itemSmall.html'")      

  a.btn.btn-primary.pull-right(ng-href='/events/new?personId={{item.id}}&returnto={{currentLocation}}') Add
  h3 Events:
  .list-group
    a.list-group-item.fixed-row(ng-repeat='item in events', ng-href="/events/{{item.id}}")
      span(ng-include="'/partials/events/itemSmall.html'")
