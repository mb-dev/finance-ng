ng-include(src="'/partials/common/finance_header.html'")
.accounts_show.container
  .panel.panel-default
    .panel-heading
      h4.panel-title Account Details
    .panel-body
      table.table.table-hover.no-header
        tr
          td.col-xs-4 Name
          td.col-xs-6 {{item.name}}
        tr
          td.col-xs-4 Import Format
          td.col-xs-6 {{item.import_format}}

  .row.form_area
    .col-xs-3.col-xs-offset-3
      a.btn.btn-primary.form-control.edit(ng-href='/accounts/{{item.id}}/edit') Edit
    .col-xs-3
      a.btn.btn-primary.form-control.delete(ng-href='/accounts/{{item.id}}/delete') Delete